<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/review_dimen_review_width"
    android:layout_height="@dimen/review_dimen_review_height"
    android:background="@drawable/review_shape"
    android:orientation="vertical"
    android:paddingBottom="@dimen/review_dimen_review_padding_bottom"
    android:paddingEnd="@dimen/review_dimen_review_padding_end"
    android:paddingStart="@dimen/review_dimen_review_padding_start"
    android:paddingTop="@dimen/review_dimen_review_padding_top">

    <TextView
        android:id="@+id/reviewAuthor"
        style="@style/Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reviewDate"
        style="@style/Caption"
        android:textColor="@color/textColorSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/review_dimen_review_date_margin_top"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/reviewText"
        style="@style/Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/review_dimen_review_text_margin_top"
        android:ellipsize="end"
        android:maxLines="2" />

</LinearLayout>